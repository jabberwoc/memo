{
  "name": "memo",
  "version": "0.3.4",
  "description": "an app for taking notes",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "clean": "rm -rf build",
    "build": "ng build --output-path=build --base-href=./",
    "build-prod": "ng build --prod --output-path=build --base-href=./",
    "prepare": "cp -aL electron/. build && cd build && npm install --production && cd ..",
    "build:electron": "npm run clean && npm run build-prod && npm run prepare",
    "dist:linux":
      "electron-packager build --platform=linux --arch=x64 --prune=true --out=dist/ --asar --overwrite",
    "dist:win":
      "electron-packager build --platform=win32 --arch=x64 --prune=true --icon=assets/icons/win/puffin.ico --out=dist/ --asar --overwrite",
    "dist:win32":
      "electron-packager build --platform=win32 --arch=ia32 --prune=true --icon=assets/icons/win/puffin.ico --out=dist/ --asar --overwrite",
    "dist:mac":
      "electron-packager build --platform=darwin --arch=x64 --prune=true --icon=assets/icons/mac/puffin.icns --out=dist/ --asar --overwrite",
    "package:debian": "electron-installer-debian --arch amd64 --config deb.json",
    "package:mac": "electron-installer-dmg dist/memo-darwin-x64/memo.app memo",
    "package:win": "electron-installer-windows --src dist/memo-win32-x64/ --dest dist/installers/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron . --enable-logging --remote-debugging-port=9222",
    "start": "npm run build && npm run electron",
    "dev": "npm run electron & ng serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/cdk": "^5.0.0-rc0",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/http": "^5.2.9",
    "@angular/material": "^5.0.0-rc0",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/platform-server": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@ngrx/store": "^5.2.0",
    "@types/cuid": "^1.3.0",
    "@types/lodash": "^4.14.85",
    "@types/pouchdb": "^6.3.2",
    "angular2-moment": "^1.7.0",
    "core-js": "^2.4.1",
    "cuid": "^2.1.0",
    "docuri": "^4.2.2",
    "dotenv": "^5.0.1",
    "electron-reload": "^1.2.2",
    "electron-settings": "^3.1.4",
    "font-awesome": "^4.7.0",
    "keytar": "^4.2.1",
    "lodash": "^4.17.4",
    "ngx-fs": "0.0.1",
    "path": "^0.12.7",
    "photonkit": "^0.1.2",
    "pouchdb": "^6.4.3",
    "pouchdb-authentication": "^1.1.2",
    "rxjs": "^5.5.7",
    "split.js": "^1.3.5",
    "tinymce": "^4.7.9",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/language-service": "^5.0.1",
    "@types/jasmine": "^2.8.2",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.0",
    "codelyzer": "~4.2.1",
    "electron": "^1.8.1",
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^11.1.0",
    "electron-rebuild": "^1.6.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "ngx-electron": "^1.0.4",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "^2.4.2"
  }
}
