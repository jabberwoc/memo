{
  "name": "memo",
  "version": "0.1.0",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "clean": "rm -rf build",
    "build": "ng build --output-path=build --base-href",
    "build-prod": "ng build --prod --output-path=build --base-href",
    "prepare": "cp -aL electron/. build && cd build && npm install --production && cd ..",
    "build:electron": "npm run clean && npm run build-prod && npm run prepare",
    "build:electron:post":
      "cd build && npm install electron-rebuild && $(npm bin)/electron-rebuild && npm remove electron-rebuild && cd ..",
    "dist:linux":
      "electron-packager build --platform=linux --arch=x64 --out=dist/ --asar --overwrite",
    "dist:mac":
      "electron-packager build --platform=darwin --arch=x64 --out=dist/ --asar --overwrite",
    "package:debian":
      "electron-installer-debian --src dist/memo-linux-x64/ --dest dist/installers/ --arch amd64",
    "package:mac": "electron-installer-dmg dist/memo-darwin-x64/memo.app memo",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron . --enable-logging --remote-debugging-port=9222",
    "start": "npm run build && npm run electron",
    "dev": "npm run electron & ng serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/cdk": "^2.0.0-beta.12",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/material": "^2.0.0-beta.12",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@ngrx/store": "^4.1.0",
    "@types/cuid": "^1.3.0",
    "@types/lodash": "^4.14.78",
    "angular2-moment": "^1.7.0",
    "core-js": "^2.4.1",
    "cuid": "^1.3.8",
    "docuri": "^4.2.2",
    "dotenv": "^4.0.0",
    "electron-reload": "^1.2.2",
    "electron-settings": "^3.1.3",
    "lodash": "^4.17.4",
    "path": "^0.12.7",
    "photonkit": "^0.1.2",
    "pouchdb": "^6.3.4",
    "rxjs": "^5.5.1",
    "tinymce": "^4.7.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.4.9",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/language-service": "^4.4.6",
    "@types/jasmine": "~2.6.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.46",
    "codelyzer": "~3.2.2",
    "electron": "^1.8.1",
    "electron-installer-debian": "^0.6.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngx-electron": "^1.0.3",
    "protractor": "~5.2.0",
    "ts-node": "~3.3.0",
    "tslint": "~5.8.0",
    "typescript": "^2.3.4"
  }
}
