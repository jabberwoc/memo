{
  "name": "memo",
  "version": "0.1.0",
  "description": "an app for taking notes",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "clean": "rm -rf build",
    "build": "ng build --output-path=build --base-href",
    "build-prod": "ng build --prod --output-path=build --base-href",
    "prepare": "cp -aL electron/. build && cd build && npm install --production && cd ..",
    "build:electron": "npm run clean && npm run build-prod && npm run prepare",
    "dist:linux": "electron-packager build --platform=linux --arch=x64 --out=dist/ --asar --overwrite",
    "dist:win": "electron-packager build --platform=win32 --arch=x64 --out=dist/ --asar --overwrite",
    "dist:mac": "electron-packager build --platform=darwin --arch=x64 --out=dist/ --asar --overwrite",
    "package:debian": "electron-installer-debian --src dist/memo-linux-x64/ --dest dist/installers/ --arch amd64",
    "package:mac": "electron-installer-dmg dist/memo-darwin-x64/memo.app memo",
    "package:win": "electron-installer-windows --src dist/memo-win32-x64/ --dest dist/installers/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron . --enable-logging --remote-debugging-port=9222",
    "start": "npm run build && npm run electron",
    "dev": "npm run electron & ng serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.1",
    "@angular/cdk": "^5.0.0-rc0",
    "@angular/common": "^5.0.1",
    "@angular/compiler": "^5.0.1",
    "@angular/core": "^5.0.1",
    "@angular/forms": "^5.0.1",
    "@angular/http": "^5.0.1",
    "@angular/material": "^5.0.0-rc0",
    "@angular/platform-browser": "^5.0.1",
    "@angular/platform-browser-dynamic": "^5.0.1",
    "@angular/platform-server": "^5.0.1",
    "@angular/router": "^5.0.1",
    "@ngrx/store": "^4.1.1",
    "@types/cuid": "^1.3.0",
    "@types/lodash": "^4.14.85",
    "angular2-moment": "^1.7.0",
    "core-js": "^2.4.1",
    "cuid": "^1.3.8",
    "docuri": "^4.2.2",
    "dotenv": "^4.0.0",
    "electron-reload": "^1.2.2",
    "electron-settings": "^3.1.4",
    "lodash": "^4.17.4",
    "path": "^0.12.7",
    "photonkit": "^0.1.2",
    "pouchdb": "^6.3.4",
    "rxjs": "^5.5.2",
    "tinymce": "^4.7.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.1",
    "@angular/language-service": "^5.0.1",
    "@types/jasmine": "^2.8.2",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.52",
    "codelyzer": "~4.0.1",
    "electron": "^1.8.1",
    "electron-installer-debian": "^0.7.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngx-electron": "^1.0.4",
    "protractor": "~5.2.0",
    "ts-node": "~3.3.0",
    "tslint": "~5.8.0",
    "typescript": "^2.6.1"
  }
}
